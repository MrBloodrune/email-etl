# Provider Settings
ENABLED_PROVIDERS=gmail
DEFAULT_PROVIDER=gmail

# Gmail API Credentials
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8080

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gmail_etl
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# OpenAI API (for embeddings)
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small

# Security Settings
MAX_ATTACHMENT_SIZE_MB=10
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png,image/gif,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Storage Paths
MARKDOWN_STORAGE_PATH=./emails
ATTACHMENT_STORAGE_PATH=./emails

# ClamAV Settings (optional)
ENABLE_CLAMAV=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Observability Settings
ENABLE_OBSERVABILITY=true
OTLP_ENDPOINT=alloy:4317
ENVIRONMENT=production

# Grafana Alloy Backend Configuration
# These would be configured in your alloy config
# PROMETHEUS_REMOTE_WRITE_URL=https://prometheus.example.com/api/v1/write
# OTLP_METRICS_ENDPOINT=https://otlp.example.com/v1/metrics
# OTLP_LOGS_ENDPOINT=https://otlp.example.com/v1/logs
# OTLP_TRACES_ENDPOINT=https://otlp.example.com/v1/traces
# LOKI_ENDPOINT=https://loki.example.com/loki/api/v1/push